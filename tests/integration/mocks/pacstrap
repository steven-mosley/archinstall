#!/bin/bash

echo "MOCK: Running pacstrap with args: $*"

# Create basic directory structure to simulate successful installation
DEST="$2"
mkdir -p "$DEST/etc"
mkdir -p "$DEST/boot"
mkdir -p "$DEST/var/lib/pacman"

echo "success" > "$DEST/var/lib/pacman/installed_packages"
for pkg in "${@:3}"; do
  echo "$pkg" >> "$DEST/var/lib/pacman/installed_packages"
done

exit 0
